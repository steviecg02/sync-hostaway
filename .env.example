# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Feature Flags
# Set to true to skip database writes (for testing)
DRY_RUN=false

# Webhook Configuration
# Credentials for Hostaway webhook authentication
WEBHOOK_USERNAME=webhook-user
WEBHOOK_PASSWORD=webhook-password

# Base URL for webhook registration with Hostaway
# IMPORTANT: Must be a domain name (no IP addresses) and no port number
# Hostaway rejects webhook URLs with ports or IP addresses
# Example: https://your-domain.com (NOT https://your-domain.com:8002)
WEBHOOK_BASE_URL=https://your-domain.com
