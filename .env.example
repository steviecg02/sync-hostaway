# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/dbname

# API Security
# Generate a secure random key for production: openssl rand -hex 32
API_KEY=your-api-key-here

# CORS Configuration
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000

# Logging Configuration
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Feature Flags
# Set to true to skip database writes (for testing)
DRY_RUN=false

# Webhook Configuration
# Credentials for Hostaway webhook authentication
WEBHOOK_USERNAME=webhook-user
WEBHOOK_PASSWORD=webhook-password

# Base URL for webhook registration with Hostaway
# Example: https://your-domain.com
WEBHOOK_BASE_URL=https://your-domain.com
